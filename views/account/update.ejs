<div class="account-form-box">
    <%- messages() %>

        <% if (errors) { %>
            <ul class="notice">
                <% errors.array().forEach((error)=> { %>
                    <li>
                        <%= error.msg %>
                    </li>
                    <% }) %>
            </ul>
            <% } %>

                <h1>Update Your Account Information</h1>

                <!-- Account Update Form -->
                <form action="/account/update" method="post" novalidate>
                    <!-- Hidden field for account ID -->
                    <input type="hidden" name="account_id" value="<%= account_id %>">

                    <!-- First Name -->
                    <div>
                        <label for="first_name">First Name:</label>
                        <input type="text" id="first_name" name="first_name" value="<%= first_name || '' %>" required>
                    </div>

                    <!-- Last Name -->
                    <div>
                        <label for="last_name">Last Name:</label>
                        <input type="text" id="last_name" name="last_name" value="<%= last_name || '' %>" required>
                    </div>

                    <!-- Email -->
                    <div>
                        <label for="email">Email Address:</label>
                        <input type="email" id="email" name="account_email" value="<%= email || '' %>" required>
                    </div>

                    <!-- Submit Button -->
                    <div>
                        <input type="submit" value="Update Account">
                    </div>
                </form>

                <div class="account-form-box">
                    <h1>Change Your Password</h1>
                    <form action="/account/change-password" method="POST" novalidate>
                        <!-- Hidden field for account ID -->
                        <input type="hidden" name="account_id" value="<%= account_id %>">

                        <!-- Password -->
                        <div>
                            <label for="new_password">New Password:</label>
                            <input type="password" id="new_password" name="new_password" required>
                            <p>Password must be at least 8 characters long and contain a mix of uppercase, lowercase,
                                numbers, and symbols.</p>
                        </div>

                        <!-- Submit Button -->
                        <div>
                            <input type="submit" value="Change Password">
                        </div>
                    </form>
                </div>

</div>

<style>
    .account-form-box {
        max-width: 600px;
        margin: 2rem auto;
        padding: 2rem;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #f9f9f9;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        font-family: Arial, sans-serif;
    }

    /* Styling for Messages and Errors */
    .notice {
        list-style-type: none;
        padding: 0;
        margin-bottom: 1rem;
        color: #d9534f;
        background-color: #f8d7da;
        border: 1px solid #f5c6cb;
        border-radius: 5px;
        padding: 0.5rem 1rem;
    }

    .notice li {
        margin: 0.5rem 0;
    }

    /* Styling for Headings */
    .account-form-box h1 {
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
        text-align: center;
        color: #333;
    }

    /* Styling for Input Fields and Labels */
    .account-form-box form div {
        margin-bottom: 1.5rem;
    }

    .account-form-box label {
        display: block;
        font-weight: bold;
        margin-bottom: 0.5rem;
        color: #555;
    }

    .account-form-box input[type="text"],
    .account-form-box input[type="email"],
    .account-form-box input[type="password"] {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 1rem;
        box-sizing: border-box;
        background-color: #fff;
        color: #333;
    }

    .account-form-box input[type="text"]:focus,
    .account-form-box input[type="email"]:focus,
    .account-form-box input[type="password"]:focus {
        border-color: #007bff;
        outline: none;
        box-shadow: 0 0 3px rgba(0, 123, 255, 0.25);
    }

    /* Styling for Password Hint */
    .account-form-box p {
        font-size: 0.875rem;
        color: #555;
        margin-top: 0.5rem;
    }

    /* Styling for Submit Buttons */
    .account-form-box input[type="submit"] {
        width: 100%;
        padding: 0.75rem;
        border: none;
        border-radius: 4px;
        font-size: 1rem;
        color: #fff;
        background-color: #007bff;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .account-form-box input[type="submit"]:hover {
        background-color: #0056b3;
    }

    /* Responsive Design */
    @media (max-width: 600px) {
        .account-form-box {
            padding: 1.5rem;
        }

        .account-form-box h1 {
            font-size: 1.25rem;
        }
    }
</style>