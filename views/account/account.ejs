<div>
    <%- messages() %>
        <% if (errors) { %>
            <ul class="notice">
                <% errors.array().forEach(error=> { %>
                    <li>
                        <%= error.msg %>
                    </li>
                    <% }) %>
            </ul>
            <% } %>

                <h1>You're Logged In</h1>

                <!-- Greet the user by first name -->
                <h2>Welcome <%= accountData.account_firstname %>
                </h2>

                <!-- Update account information link (visible to all account types) -->
                <p>
                    <a href="/account/update/<%= accountData.account_id %>">Update Account Information</a>
                </p>

                <% if (accountData.account_type==="Employee" || accountData.account_type==="Admin" ) { %>
                    <!-- Manage Inventory section for Employee/Admin -->
                    <h3>Inventory Management</h3>
                    <p>
                        <a href="../inv">Go to Inventory Management</a>
                    </p>
                    <% } %>
</div>